<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
    <name>negocio</name>
    <creationDate>01 Enero 2013</creationDate>
    <author>Carles Serrats</author>
    <authorEmail>carless@cesigrup.com</authorEmail>
    <authorUrl>http://www.cesigrup.com</authorUrl>
    <copyright>Copyright (C) 2005 - 2012 Inform√†tica i comunicacions CESI SL, All rights reserved.</copyright>
    <license>Comercial</license>
    <version>2.5.0</version>
    <description>TPL_NEGOCIO_DESC</description>
        
    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <folder>css</folder>
        <folder>html</folder>
        <folder>img</folder>
        <folder>js</folder>
        <folder>language</folder>
    </files>
    
    <positions>
        <position>header</position>
        <position>header-right</position>
        <position>header-left</position>
        <position>breadcrumbs</position>
        <position>main-menu</position>
        <position>top-left</position>
        <position>top-right</position>
        <position>top</position>
        <position>top-1</position>
        <position>top-2</position>
        <position>top-3</position>
        <position>left</position>
        <position>right</position>
        <position>inner-top</position>
        <position>inner-bottom</position>
        <position>bottom</position>
        <position>bottom-1</position>
        <position>bottom-2</position>
        <position>bottom-3</position>
        <position>bottom-4</position>
        <position>bottom-5</position>
        <position>footer</position>
    </positions>
    
    <!-- 	For core templates, we also install/uninstall the language files in the core language folders. -->
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_negocio.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_negocio.sys.ini</language>
        <language tag="es-ES">es-ES/es-ES.tpl_negocio.ini</language>
        <language tag="es-ES">es-ES/es-ES.tpl_negocio.sys.ini</language>		
    </languages>
	
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="displayHomepage" type="list" default="0" label="TPL_NEGOCIO_FIELD_DISPLAYHOMEPAGE_LABEL" description="TPL_NEGOCIO_FIELD_DISPLAYHOMEPAGE_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="debug_mode" type="radio" description="TPL_NEGOCIO_DEBUG_MODE_DESC" label="TPL_NEGOCIO_DEBUG_MODE_LABEL" default="0">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
				
                <field type="spacer" name="sitespacer" class="text" label="TPL_NEGOCIO_LESS_LESSSPACER" />
						
                <field type="spacer" name="sitespacer2" class="text" label="TPL_NEGOCIO_GENERIC_SITESPACER" />
				
                <field name="leftPositionWidth" type="list" default="3" label="TPL_NEGOCIO_FIELD_LEFTPOSITION_LABEL" description="TPL_NEGOCIO_FIELD_LEFTPOSITION_DESC" filter="int" >
                    <option value="2">TPL_NEGOCIO_OPTION_SMALL</option>
                    <option value="3">TPL_NEGOCIO_OPTION_MEDIUM</option>
                    <option value="4">TPL_NEGOCIO_OPTION_LARGE</option>
                </field>
				
                <field name="rightPositionWidth" type="list" default="3" label="TPL_NEGOCIO_FIELD_RIGHTPOSITION_LABEL" description="TPL_NEGOCIO_FIELD_RIGHTPOSITION_DESC" filter="int" >
                    <option value="2">TPL_NEGOCIO_OPTION_SMALL</option>
                    <option value="3">TPL_NEGOCIO_OPTION_MEDIUM</option>
                    <option value="4">TPL_NEGOCIO_OPTION_LARGE</option>
                </field>
            </fieldset>
        </fields>
    </config>	
</extension>