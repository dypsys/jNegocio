	<authorUrl>www.cesigrup.com</authorUrl>
	<version>2.5.0</version>
	<description>COM_JNEGOCIO_DESCRIPTION</description>
	
	<!-- Application/site -->    
	<files folder="site">
		<file>jnegocio.php</file>
		<file>controller.php</file>
        <file>router.php</file>
		<file>index.html</file>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<languages folder="site/language">
		<language tag="es-ES">es-ES/es-ES.com_jnegocio.ini</language>
		<language tag="es-ES">es-ES/es-ES.com_jnegocio.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.com_jnegocio.ini</language>
		<language tag="en-GB">en-GB/en-GB.com_jnegocio.sys.ini</language>
	</languages>
	
	<administration>
		<menu img="../media/com_jnegocio/images/icons/16/jnegocio.png" view="dashboard">COM_JNEGOCIO</menu>

		<files folder="administrator/components/com_jnegocio">
	        <filename>index.html</filename>
	        <filename>admin.jnegocio.php</filename>
	        <filename>controller.php</filename>
	        <filename>defines.php</filename>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>helpers</folder>
			<folder>install</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>

		<languages folder="administrator/components/com_jnegocio/language">
			<language tag="en-GB">en-GB/en-GB.com_jnegocio.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_jnegocio.sys.ini</language>
			<language tag="es-ES">es-ES/es-ES.com_jnegocio.ini</language>
			<language tag="es-ES">es-ES/es-ES.com_jnegocio.sys.ini</language>
		</languages>
	</administration>
	
	<!-- Installation -->
	<install>
            <sql folder="administrator/components/com_jnegocio">
                <file charset="utf8" driver="mysql">install/install.sql</file>
                <file charset="utf8" driver="mysqli">install/install.sql</file>
            </sql>
        </install>	
	
	<uninstall> <!-- Runs on uninstall -->
            <sql folder="administrator/components/com_jnegocio">
                <file driver="mysql" charset="utf8">install/uninstall.sql</file>
                <file driver="mysqli" charset="utf8">install/uninstall.sql</file>
            </sql>
        </uninstall>
            
	<!--  Media -->
	<media destination="com_jnegocio" folder="media/com_jnegocio">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<file>index.html</file>
	</media>
	
	<!-- Changelogs -->
	<changelogs>
		<version>0.0.2</version>
		<date>17-09-2012</date>
