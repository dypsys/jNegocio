<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE extension PUBLIC '-//Joomla! 2.5//DTD template 1.0//EN' 'http://www.joomla.org/xml/dtd/2.5/template-install.dtd'>
<extension version="2.5" type="template" client="site">
    <name>TPL_NADMIN</name>
    <creationDate>01 Enero 2013</creationDate>
    <author>Carles Serrats</author>
    <authorEmail>carless@cesigrup.com</authorEmail>
    <authorUrl>http://www.cesigrup.com</authorUrl>
    <copyright>Copyright (C) 2005 - 2012 Inform√†tica i comunicacions CESI SL, All rights reserved.</copyright>
    <license>Comercial</license>
    <version>2.5.0</version>
    <description>TPL_NADMIN_XML_DESCRIPTION</description>
    
    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <folder>css</folder>
        <folder>html</folder>
        <folder>img</folder>
        <folder>js</folder>
        <folder>language</folder>
    </files>
    
    <positions>
        <position>menu</position>
        <position>nav-lang</position>
        <position>toolbar</position>
        <position>title</position>
        <position>status</position>
        <position>icon</position>
        <position>cp_shell</position>
        <position>cpanel</position>
        <position>footer</position>
        <position>login</position>
        <position>debug</position>
    </positions>
    
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_nadmin.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_nadmin.sys.ini</language>
        <language tag="es-ES">es-ES/es-ES.tpl_nadmin.ini</language>
        <language tag="es-ES">es-ES/es-ES.tpl_nadmin.sys.ini</language>	        
    </languages>
    
    <config>
        <fields name="params">
            <fieldset name="advanced">
            	<field name="debug_mode" type="radio"
					description="TPL_NADMIN_DEBUG_MODE_DESC"
					label="TPL_NADMIN_DEBUG_MODE_LABEL"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
            	<field type="spacer" name="sitespacer" class="text" label="TPL_NADMIN_LESS_SITESPACER" />
				<field name="lessfile" type="text"
					description="TPL_NADMIN_LESS_FIELD_LESSFILE_DESC"
					label="TPL_NADMIN_LESS_FIELD_LESSFILE_LABEL"
					default="less/template.less"
					size="37"
				/>
				<field name="cssfile" type="text"
					description="TPL_NADMIN_LESS_FIELD_CSSFILE_DESC"
					label="TPL_NADMIN_LESS_FIELD_CSSFILE_LABEL"
					default="css/template.css"
					size="37"
				/>
				<field type="spacer" name="sitespacer" class="text" label="TPL_NADMIN_LESS_SITESPACER" />
				<field name="less_force" type="radio"
					description="TPL_NADMIN_LESS_FIELD_FORCE_DESC"
					label="TPL_NADMIN_LESS_FIELD_FORCE_LABEL"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="less_comments" type="radio"
					description="TPL_NADMIN_LESS_FIELD_COMMENTS_DESC"
					label="TPL_NADMIN_LESS_FIELD_COMMENTS_LABEL"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="less_compress" type="radio"
					description="TPL_NADMIN_LESS_FIELD_COMPRESSION_DESC"
					label="TPL_NADMIN_LESS_FIELD_COMPRESSION_LABEL"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
            </fieldset>
        </fields>
    </config>                                
</extension>