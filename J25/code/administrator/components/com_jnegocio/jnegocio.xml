			<new>Instalacion y creacion del componente.</new>
		</state>
	</changelogs>
	
	<menuadmin>
	    <submenu name="COM_JNEGOCIO_MENUMAESTROS">
	    	<menu view="manufacturers">COM_JNEGOCIO_MANUFACTURERS</menu>
                <menu view="categories">COM_JNEGOCIO_CATEGORIES</menu>
	        <menu view="products">COM_JNEGOCIO_PRODUCTS</menu>
	        <menu view="attributes">COM_JNEGOCIO_ATTRIBUTES</menu>
	    </submenu>
            <submenu name="COM_JNEGOCIO_MENUUSERS">
                <menu view="users">COM_JNEGOCIO_USERS</menu>
